<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Todo List"
        android:textSize="36sp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/lavender"
        android:id="@+id/txtTodolist"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/edEnterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Task"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtTodolist"/>

    <EditText
        android:id="@+id/edCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Date"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/edEnterName"/>

    <EditText
        android:id="@+id/edMarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Time"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/edCourse"/>

    <Button
        android:id="@+id/btnInsert"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/edCourse"
        android:layout_marginTop="95dp"
        android:text="Insert Data"
        android:textSize="18sp"
        app:cornerRadius="30dp" />

    <Button
        android:id="@+id/btnViewAll"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/btnInsert"
        android:layout_marginTop="27dp"
        android:text="View Tasks"
        android:textSize="18sp"
        app:cornerRadius="30dp" />

    <EditText
        android:id="@+id/edIdToEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Id to edit or delete"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btnViewAll"/>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/edIdToEdit"
        android:layout_marginTop="22dp"
        android:text="Update"
        android:textSize="18sp"
        app:cornerRadius="30dp" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/btnUpdate"
        android:layout_marginTop="12dp"
        android:text="Delete"
        android:textSize="18sp"
        app:cornerRadius="30dp" />

</RelativeLayout>